	<!-- LOG everything at INFO level -->
	<root level="info">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>

	<!-- LOG "it.smartcommunitylab.playandgo" at DEBUG level -->
	<logger name="it.smartcommunitylab.playandgo" level="${LOG_LEVEL}" additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</logger>

